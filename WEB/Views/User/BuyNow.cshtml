@model IEnumerable<taka.Models.DatabaseInteractive.BillItem>

@{
    ViewBag.Title = "BuyNow";
    List<taka.Models.Enitities.Address> listAddress = ViewBag.addresses;
}
<header>
    <style>
        .dropdown-item:active {
            border: 0px !important;
        }
    </style>
</header>
<!--Section: Block Content-->
<section>

    <!--Grid row-->
    <form class="row" action="/User/CheckOut" method="post">

        <!--Grid column-->
        <div class="col-lg-8 mb-4">

            <!-- Card -->
            <div class="card wish-list pb-1">
                <div class="card-body">

                    <h5 class="mb-2">HÓA ĐƠN</h5>



                    <!-- Address Chosing -->
                    <div class="d-flex flex-wrap card md-form md-outline mb-0 mb-lg-4">
                        <div class="dropdown card-body">
                            <input class="btn btn-light dropdown-toggle addressPicker" type="button" name="addressPicker" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @foreach (var item in listAddress)
                                {
                                    <button class="dropdown-item address_dropdown" id="address_@item.ID" onclick="changeAddress('@item.Address1'); changePhone('@item.Phone'); changeName('@item.Name');">@item.Address1</button>
                                }
                                <button class="dropdown-item" id="address_other" onclick="changeAddress('Khác')">Khác</button>
                            </div>
                            <div class="text-right">
                                <h5 class="client-name"></h5>
                                <h6 class="client-phone"></h6>
                            </div>
                        </div>
                    </div>
                    <!--Name-->
                    <div class="md-form md-outline mb-0 mb-lg-4 other-contact-info">
                        <div class="md-form md-outline">
                            <input type="text" id="form15" placeholder="Họ Tên"
                                   class="form-control" name="fullName">
                        </div>
                    </div>
                    <!--Address-->
                    <div class="md-form md-outline mb-0 mb-lg-4 other-contact-info">
                        <div class="md-form md-outline">
                            <input type="text" id="form15" placeholder="Số nhà, Đường, Phường/Xã, Quận/Huyện, Tỉnh/Thành Phố"
                                   class="form-control" name="address" required>
                        </div>
                    </div>


                    <!-- Phone -->
                    <div class="md-form md-outline mb-0 mb-lg-4 other-contact-info">
                        <div class="md-form md-outline">
                            <input type="number" id="form18" class="form-control" placeholder="Số điện thoại">
                        </div>
                    </div>
                    <!-- Shipper -->
                    <div class="d-flex flex-wrap card md-form md-outline mb-0 mb-lg-4">
                        <div class="dropdown card-body">
                            <input class="btn btn-light dropdown-toggle shipper" type="button" id="shipperDropdown" name="shipper" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <button class="dropdown-item" onclick="changeShipper('shipper1')">Giao hàng nhanh</button>
                                <button class="dropdown-item" onclick="changeShipper('shipper2')">Giao hàng tiết kiệm</button>
                                <button class="dropdown-item" onclick="changeShipper('shipper3')">Viettel Post</button>
                            </div>
                            <p class="text-right" id="estimateTime"></p>
                        </div>
                    </div>
                    <!-- Additional information -->
                    <div class="md-form md-outline mb-0 mb-lg-4">
                        <div class="md-form md-outline">
                            <textarea id="form76" class="md-textarea form-control" rows="4" name="message" placeholder="Lời nhắn tới người bán"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">
            @*Your Cart*@
            <div class="mb-3">
                <div class="pt-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Đơn hàng</span>
                        <span class="badge badge-secondary badge-pill" style="background-color:#ee4d2d;">@Model.Count()</span>
                    </h4>
                    <ul class="list-group mb-3">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">@item.bookName</h6>
                                    <small class="text-muted">Số lượng: @item.quantity</small>
                                </div>
                                <span class="text-muted">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", item.price * item.quantity) VND</span>
                            </li>
                        }

                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Phí vận chuyển</h6>
                                <small class="shipper"></small>
                            </div>
                            <span class="text-success shipFee">-$5</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <strong style="color:#ee4d2d;">Tổng tiền</strong>

                            @*<strong class="totalSumVAT" style="color:#ee4d2d;"></strong>*@
                            <input type="text" style="color:#ee4d2d; border:none; background-color:white;" class="totalSum text-right font-weight-bold" disabled="disabled" name="totalSum" />
                        </li>
                    </ul>
                    <button type="submit" style="background-color:#ee4d2d;color:white" class="btn btn-light btn-block">Mua ngay</button>
                </div>
            </div>
            @*End Your Cart*@
            <hr />
            @foreach (var item in Model)
            {
                <input hidden class="id_cart" name="id" value="@item.id" />

            }

        </div>

        <!--Grid column-->

    </form>
    <!--Grid row-->

    @foreach (var item in Model)
    {

        <div hidden class="amount">
            @item.price
        </div>
        <div hidden class="quantity">
            @item.quantity
        </div>
    }

</section>
<!--Section: Block Content-->
<script>
    let changeTotalAmount = () => {
        let sum = 0;
        let shipFee = $('.shipFee').text().replace('.', '').replace('VND', '').trim();
        for (let i = 0; i < $('.amount').length; i++) {
            let id = $('.id_cart')[i].textContent;
            let price = $('.amount')[i].textContent;
            let quantity = $('.quantity')[i].textContent;
            sum += price * quantity;
        }
        $('.totalSum').val((parseInt(sum) + parseInt(shipFee)).toLocaleString('it-IT', { style: 'currency', currency: 'VND' }))
    }


    let changeShipper = (id) => {
        let shipper = 'Giao hàng nhanh';
        let shipFee = 40000;
        if (id == 'shipper2') {
            shipper = 'Giao hàng tiết kiệm';
            shipFee = 15000;
        }
        if (id == 'shipper3') {
            shipper = 'Viettel Post';
            shipFee = 30000;
        }
        $('.shipper').text(shipper);
        $('.shipper.btn').val(shipper);
        $('.shipFee').text(shipFee.toLocaleString('it-IT', { style: 'currency', currency: 'VND' }))
        changeEstimate(id);
    }

    let changeEstimate = (id) => {
        let estimateTime = ' 2 - 3 ngày';
        if (id == 'shipper2') {
            estimateTime = ' 4 - 6 ngày';
        }
        if (id == 'shipper3') {
            estimateTime = ' 2 - 5 ngày';
        }
        $('#estimateTime').text('Thời gian dự kiến:' + estimateTime);
        changeTotalAmount();
    }

    let changeAddress = (text) => {
        $('.addressPicker').val(text);

        if (text == 'Khác') {
            $('.other-contact-info').show('slow');
            $('.client-name,.client-phone').text('');
        }
        else {
            $('.other-contact-info').hide('slow');
        }
    }

    let changePhone = (phone) => {
        $('.client-phone').text(phone);
    }

    let changeName = (name) => {
        $('.client-name').text(name);
    }

    $('.address_dropdown')[0].onclick();
    changeShipper();

    changeTotalAmount();
</script>
