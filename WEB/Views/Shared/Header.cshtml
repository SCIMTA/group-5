@{
    taka.Models.Enitities.User userInfo = (taka.Models.Enitities.User)Session["UserInfo"];
}

<div style="background-color:#ee4d2d" class="row">
    <img src="https://cdn0.fahasa.com/media/wysiwyg/Thang-05-2021/BigSale1_header.png" style="width:100%" />
    <div class="container">
        <nav class="nav float-right">
            @if (userInfo == null)
            {
                <button type="button" class="btn btn-light m-1" data-toggle="modal" data-target="#modalLogin" style="color:#ee4d2d;">
                    <b>Đăng nhập</b>
                </button>

                <button type="button" class="btn btn-light m-1" data-toggle="modal" data-target="#modalRegister" style="color:#ee4d2d;">
                    <b>Đăng ký</b>
                </button>
            }
            @if (userInfo != null && userInfo.Phone.Equals("admin"))
            {
                <a href="/Admin/Add" class="btn btn-light m-1" style="color:#ee4d2d;">
                    <b>Thêm đầu sách</b>
                </a>

                <a href="/Admin/Manager" class="btn btn-light m-1" style="color:#ee4d2d;">
                    <b>Quản lý hệ thống</b>
                </a>

            }
            @if (userInfo != null && !userInfo.Phone.Equals("admin"))
            {
                <button type="button" class="btn btn-light m-1" data-toggle="modal" data-target="#modalUser" style="color:#ee4d2d;">
                    <b>Xin chào @userInfo.Fullname</b>
                </button>
            }
        </nav>
    </div>
    <form action="/Home" class="input-group container pt-4 pb-4">
        <a href="/">
            <img style="position:absolute;top:25%;height:45%;left:-5%" src="https://salt.tikicdn.com/ts/upload/ae/f5/15/2228f38cf84d1b8451bb49e2c4537081.png" />
        </a>
        <input name="text" type="text" class="form-control" placeholder="Đắc nhân tâm" aria-describedby="basic-addon2" value="@ViewBag.TextSearch" />
        <button class="btn btn-solid-primary btn-light" style="color:white;background-color:#ee4d2d;" type="submit">
            <ion-icon style="font-size:15px" name="search"></ion-icon>
        </button>
    </form>
</div>