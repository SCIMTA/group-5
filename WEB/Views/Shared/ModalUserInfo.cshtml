@if (Session["isLogin"] != null)
{
    <div class="modal" tabindex="-1" role="dialog" id="modalUser">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>Họ Tên</th>
                            <td>@Session["UserInfoName"]</td>
                        </tr>
                        <tr>
                            <th>Ngày sinh</th>
                            <td>@Session["UserInfoDate"]</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@Session["UserInfoPhone"]</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <a style="color:white" href="/Home/Logout" class="btn btn-danger">Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
}