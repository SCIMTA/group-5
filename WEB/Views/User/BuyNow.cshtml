@model IEnumerable<taka.Models.Enitities.Cart>

@{
    ViewBag.Title = "BuyNow";
    ViewBag.shipper = "Đơn vị vận chuyển";
}

<!--Section: Block Content-->
<section>

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8 mb-4">

            <!-- Card -->
            <div class="card wish-list pb-1">
                <div class="card-body">

                    <h5 class="mb-2">HÓA ĐƠN</h5>

                    <!-- Grid row -->
                    <div class="row">

                        <!-- Grid column -->
                        <div class="col-lg-6">

                            <!-- Last name -->
                            <div class="md-form md-outline mb-0 mb-lg-4">
                                <input type="text" id="firstName" class="form-control mb-0 mb-lg-2">
                                <label for="lastName">Họ</label>
                            </div>

                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-lg-6">

                            <!-- First name -->
                            <div class="md-form md-outline">
                                <input type="text" id="lastName" class="form-control">
                                <label for="firstName">Tên</label>
                            </div>

                        </div>
                        <!-- Grid column -->

                    </div>
                    <!-- Grid row -->
                    <!-- Shipper -->
                    <div class="d-flex flex-wrap card">
                        <div class="dropdown card-body">
                            <button class="btn btn-light dropdown-toggle" type="button" id="shipper" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <button class="dropdown-item" onclick="changeShipper('shipper1')">Giao hàng nhanh</button>
                                <button class="dropdown-item" onclick="changeShipper('shipper2')">Giao hàng tiết kiệm</button>
                                <button class="dropdown-item" onclick="changeShipper('shipper3')">Viettel Post</button>
                            </div>
                            <p class="text-right" id="estimateTime"></p>
                        </div>
                    </div>
                    <label > Đơn vị vận chuyển</label>
                    <hr />


                    <!-- Address Part 2 -->
                    <div class="md-form md-outline">
                        <input type="text" id="form15" placeholder="Số nhà, Đường, Phường/Xã, Quận/Huyện, Tỉnh/Thành Phố"
                               class="form-control">
                        <label for="form15">Địa chỉ</label>
                    </div>



                    <!-- Phone -->
                    <div class="md-form md-outline">
                        <input type="number" id="form18" class="form-control">
                        <label for="form18">Số điện thoại</label>
                    </div>

                    <!-- Additional information -->
                    <div class="md-form md-outline">
                        <textarea id="form76" class="md-textarea form-control" rows="4"></textarea>
                        <label for="form76">Lời nhắn tới người bán</label>
                    </div>

                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="card mb-4">
                <div class="card-body">

                    <h5 class="mb-3">The total amount of</h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount
                            <span>$53.98</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping
                            <span>Gratis</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>$53.98</strong></span>
                        </li>
                    </ul>

                    <button type="button" class="btn btn-primary btn-block waves-effect waves-light">Make purchase</button>

                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="card mb-4">
                <div class="card-body">

                    <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample"
                       aria-expanded="false" aria-controls="collapseExample">
                        Add a discount code (optional)
                        <span><i class="fas fa-chevron-down pt-1"></i></span>
                    </a>

                    <div class="collapse" id="collapseExample">
                        <div class="mt-3">
                            <div class="md-form md-outline mb-0">
                                <input type="text" id="discount-code" class="form-control font-weight-light"
                                       placeholder="Enter discount code">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->

    </div>
    <!--Grid row-->

</section>
<!--Section: Block Content-->
<script>
    $(document).ready(function () {
        $('.mdb-select').materialSelect();
        $('.select-wrapper.md-form.md-outline input.select-dropdown').bind('focus blur', function () {
            $(this).closest('.select-outline').find('label').toggleClass('active');
            $(this).closest('.select-outline').find('.caret').toggleClass('active');
        });
    });

    let changeShipper = (id) => {
        let shipper = 'Giao hàng nhanh';
        if (id == 'shipper2') {
            shipper = 'Giao hàng tiết kiệm';
        }
        if (id == 'shipper3') {
            shipper = 'Viettel Post';
        }
        $('#shipper').text(shipper);
        changeEstimate(id);
    }

    let changeEstimate = (id) => {
        let estimateTime = ' 2 - 3 ngày';
        if (id == 'shipper2') {
            estimateTime = ' 3 - 5 ngày';
        }
        if (id == 'shipper3') {
            estimateTime = ' 2 - 5 ngày';
        }
        $('#estimateTime').text('Thời gian dự kiến:' + estimateTime);
    }
    changeShipper();
</script>
