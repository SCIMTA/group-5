<div class="modal" tabindex="-1" role="dialog" id="modalRegister">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Đăng ký</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Home/Register" method="post">
                    <input name="callbackUrl" id="urlHiddenRegister" style="display:none" />
                    <div class="form-group">
                        <input name="phone" type="number" class="form-control" placeholder="Số điện thoại *" value="" required />
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" placeholder="Mật khẩu *" value="" required />
                    </div>
                    <div class="form-group">
                        <input name="repassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu *" value="" required />
                    </div>
                    <div class="form-group">
                        <input name="email" type="email" class="form-control" placeholder="Email " value="" />
                    </div>
                    <div class="form-group">
                        <input name="fullname" type="text" class="form-control" placeholder="Họ và tên " value="" />
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label>
                        <select name="gender" class="form-control">
                            <option value="Khác">Khác</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input name="birthday" type="date" class="form-control" placeholder="Ngày sinh " value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-light" style="background-color:#ee4d2d;color:white" value="Đăng ký" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>