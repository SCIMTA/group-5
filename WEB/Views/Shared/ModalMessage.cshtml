<div class="modal" tabindex="-1" role="dialog" id="messageModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="hideMessage()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="message">
                @TempData[taka.Utils.C.TEMPDATA.Message]
            </div>
            @if (TempData[taka.Utils.C.TEMPDATA.RequireLogin] != null)
            {
                <div class="modal-footer">
                    <button onclick="goToLoginPage()" type="button" style="color:white;background-color:#ee4d2d" class="btn">Đăng nhập</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    const hideMessage = () => {
        $("#messageModal").modal('hide');
    }
    const showMessage = () => {
        $("#messageModal").modal('show');
    }
    if (document
        .getElementById("message").textContent.trim().length > 0) {
        console.log("run")
        setTimeout(() => {
            showMessage();
        }, 300);
    }
    const goToLoginPage = () => {
        window.location.href = `/Home/Login?returnUrl=${window.location.href}`
    }
</script>