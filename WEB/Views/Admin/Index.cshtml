
@{
    Layout = null;
}
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@ViewBag.Icon" sizes="32x32">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive sidebar template with sliding effect and dropdown menu based on bootstrap 3">
    <title>TAKASA - Quản lý hệ thống</title>
    <script src="/Content/IndedxAdmin.js"></script>
    <link href="/Content/IndedxAdmin.css" rel="stylesheet">
</head>

<body data-new-gr-c-s-check-loaded="14.1010.0" data-gr-ext-installed="">
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper" style="background-color:#ee4d2d">
            <div class="sidebar-content">
                <div style="display:flex;flex:1;flex-direction:row;padding:10px;">
                    <img style="width:150px;object-fit:contain" src="~/Content/Icon/ic_icon.png" />
                    <div id="close-sidebar" style="text-align: right; font-size: 25px; flex: 1; display: flex;justify-content:flex-end">
                        <i class="fas fa-times" style="color:white;"></i>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span style="color:white">Quản trị hệ thống</span>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=order" style="color:#ee4d2d;" class="side-bar-click">
                                <ion-icon name="cube-outline" class="side-bar-icon"></ion-icon>
                                <b class="side-bar-text">Đơn hàng</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=user" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="person-circle-outline"></ion-icon>
                                <b class="side-bar-text">Người dùng</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=category" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="albums-outline"></ion-icon>
                                <b class="side-bar-text">Danh mục</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=publisher" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="library-outline"></ion-icon>
                                <b class="side-bar-text">Nhà xuất bản</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=author" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="people-circle-outline"></ion-icon>
                                <b class="side-bar-text">Tác giả</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=type" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="layers-outline"></ion-icon>
                                <b class="side-bar-text">Hình thức</b>
                            </a>
                        </li>
                        <li class="side-bar-tab">
                            <a href="?tab=language" class="side-bar-click">
                                <ion-icon class="side-bar-icon" name="language-outline"></ion-icon>
                                <b class="side-bar-text">Ngôn ngữ</b>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="page-content">
            @switch (ViewBag.tab)
            {
                case "order":
                    @RenderPage("~/Views/Admin/Shared/Order.cshtml")
                    break;
                case "user":
                    @RenderPage("~/Views/Admin/Shared/User.cshtml")
                    break;
                case "category":
                    @RenderPage("~/Views/Admin/Shared/Category.cshtml")
                    break;
                case "publisher":
                    @RenderPage("~/Views/Admin/Shared/Publisher.cshtml")
                    break;
                case "author":
                    @RenderPage("~/Views/Admin/Shared/Author.cshtml")
                    break;
                case "type":
                    @RenderPage("~/Views/Admin/Shared/Type.cshtml")
                    break;
                case "language":
                    @RenderPage("~/Views/Admin/Shared/Language.cshtml")
                    break;
            }

        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script>
        let listATag = $(".side-bar-click")
        for (let i = 0; i < listATag.length; i++) {
            if (listATag[i].href.split("=")[1] =='@ViewBag.tab')
                $(listATag[i]).parent().addClass("active")
        }
    </script>
</body>
</html>