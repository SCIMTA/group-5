@model taka.Models.Enitities.User

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}

<body>
    <form action="EditUser" method="post" role="form">
        <div class="user-page-brief">
            <h3> Chỉnh sửa hồ sơ </h3>
        </div>
        <div>
            <table class="table" style="vertical-align:auto">
                <tr>
                    <th>Họ Tên</th>
                    <td><input type="text" name="name" class="form-control" id="name" placeholder="Họ Tên" value="@Model.Fullname"></td>
                </tr>
                <tr>
                    <th>Ngày sinh</th>
                    <td><input name="birthday" type="date" class="form-control" placeholder="Ngày sinh " value="@Model.Birthday" /></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><input name="email" type="email" class="form-control" placeholder="Email " value="@Model.Email" /></td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td><input name="phone" type="number" class="form-control" placeholder="Số điện thoại *" value="@Model.Phone" required /></td>
                </tr>
                <tr>
                    <th>Giới tính</th>
                    <td>
                        <select name="gender" class="form-control">
                            <option value="Khác">Khác</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" class="btn btn-light" style="background-color:#ee4d2d;color:white" value="Cập Nhật" />
            </div>
        </div>

    </form>
</body>

