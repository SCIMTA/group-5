@model IEnumerable<taka.Models.Enitities.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Add")
    </p>
    <table class="table">
        <tr>

            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Category
            </th>
            <th>
                Language
            </th>
            <th>
                Publisher
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Page
            </th>
            <th>
                Year
            </th>
            <th>
                Quantity
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Title
                </td>
                <td>
                    @item.Author.Name
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @item.Language.Name
                </td>
                <td>
                    @item.Publisher.Name
                </td>
                <td>
                    @item.Type.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Page
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
