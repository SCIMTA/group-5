<div class="modal" tabindex="-1" role="dialog" id="modalLogin">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Đăng nhập</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Home/Login" method="post">
                    <input name="callbackUrl" id="urlHidden" style="display:none" />
                    <div class="form-group">
                        <input name="username" type="text" class="form-control" placeholder="Tên đăng nhập*" value="" />
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" placeholder="Mật khẩu *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-light" style="background-color:#ee4d2d;color:white" value="Đăng nhập" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>