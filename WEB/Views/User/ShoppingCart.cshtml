@model IEnumerable<taka.Models.Enitities.Cart>

@{
    ViewBag.Title = "ShoppingCart";

}

<!--Section: Block Content-->
<section>

    <!--Grid row-->
    <form class="row" action="/User/BuyNow" method="post">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4 wish-list">

                    <h5 class="mb-4">Giỏ (<span>@Model.Count()</span> mặt hàng)</h5>
                    @foreach (var item in Model)
                    {
                        <div class="row mb-4">
                            <div class="form-check col-md-1 col-lg-1 col-xl-1" style="text-align:center;display: flex; justify-content: center; align-items: center;">
                                <input name="id" type="checkbox" value="@item.ID" id="flexCheck_@item.ID" style="width:15px; height:15px; background-color:#ee4d2d;" checked>
                            </div>
                            <div class="col-md-5 col-lg-3 col-xl-3">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100"
                                         src="@item.Book.Images.First().Url" alt="Ảnh của 1 cuốn sách">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-8 col-xl-8">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4>@item.Book.Title</h4>

                                            <p class="mb-3 text-muted text-uppercase small">Tác giả: @item.Book.Author.Name</p>
                                            <p class="mb-3 text-muted text-uppercase small">Nhà Xuất Bản: @item.Book.Publisher.Name</p>
                                            <p class="mb-2 text-muted text-uppercase small">Số lượng: @item.Book.Quantity</p>

                                        </div>
                                        <div>
                                            <div class="def-number-input number-input safari_only mb-0 w-100">

                                                <a class="btn btn-outline-light" onclick="downQuantity('@item.ID')" style="border:none; ">
                                                    <ion-icon name="remove-outline"></ion-icon>
                                                </a>
                                                <input class="quantity amount" min="1" name="quantity" value="@item.Quantity" type="number" style="width:80px;" id="inputQuantity_@item.ID">
                                                <div hidden class="amount">@item.Book.Price</div>
                                                <a class="btn btn-outline-light" onclick="upQuantity('@item.ID')" style="border:none;">
                                                    <ion-icon name="add-outline"></ion-icon>
                                                </a>

                                            </div>
                                            <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                                Số Lượng
                                            </small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a href="/User/DeleteCartItem?idUser=@item.idUser&idBook=@item.idBook" type="button" class="card-link-secondary small text-uppercase mr-3">
                                                <i class="fas fa-trash-alt mr-1"></i> Xóa mặt hàng
                                            </a>

                                        </div>
                                        <p class="mb-0">

                                            <span>
                                                <strong id="summary" style="color:#ee4d2d">
                                                    VND: @String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", item.Book.Price)
                                                </strong>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                    }
                </div>
            </div>

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-4">Chấp nhận thanh toán qua</h5>

                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                         alt="Visa">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                         alt="American Express">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                         alt="Mastercard">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png"
                         alt="PayPal acceptance mark">
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-3">Tổng tiền</h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Tổng tạm
                            <span id="totalAmount">

                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Phí vận chuyển
                            <span>Miễn phí</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>Tổng tiền cần thanh toán</strong>
                                <strong>
                                    <p class="mb-0">(đã bao gồm VAT)</p>
                                </strong>
                            </div>
                            <span>
                                <strong id="totalSumVAT">

                                </strong>
                            </span>
                        </li>
                    </ul>

                    <button type="submit" class="btn btn-primary btn-block">Mua ngay</button>

                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample"
                       aria-expanded="false" aria-controls="collapseExample">
                        Add a discount code (optional)
                        <span><i class="fas fa-chevron-down pt-1"></i></span>
                    </a>

                    <div class="collapse" id="collapseExample">
                        <div class="mt-3">
                            <div class="md-form md-outline mb-0">
                                <input type="text" id="discount-code" class="form-control font-weight-light"
                                       placeholder="Enter discount code">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->

    </form>
    <!-- Grid row -->

</section>
<!--Section: Block Content-->

<script>
    let changeTotalAmount = () => {
        let sum = 0
        for (let i = 0; i < 4; i += 2) {
            let price = $('div .amount')[i + 1].textContent
            let quantity = $('div .amount')[i].value
            sum += price * quantity
        }
        $('#totalAmount').text(sum.toLocaleString('it-IT', { style: 'currency', currency: 'VND' }))
        $('#totalSumVAT').text((sum * 1.1).toLocaleString('it-IT', { style: 'currency', currency: 'VND' }))
    }
    let upQuantity = (id) => {
        $('#inputQuantity_' + id).val(parseInt($('#inputQuantity_' + id).val()) + 1)
        changeTotalAmount()
    }
    let downQuantity = (id) => {
        if (parseInt($('#inputQuantity_' + id).val()) > 1) {
            $('#inputQuantity_' + id).val($('#inputQuantity_' + id).val() - 1)
            changeTotalAmount()
        }

    }
    changeTotalAmount()
</script>