<div class="modal" tabindex="-1" role="dialog" id="messageModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="hideMessage()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="message">
                @TempData[taka.Utils.C.TEMPDATA.Message]
            </div>
            @if (TempData[taka.Utils.C.TEMPDATA.RequireLogin] != null)
            {
                <div class="modal-footer">
                    <button onclick="loginNow()" type="button" style="color:white;background-color:#ee4d2d" data-toggle="modal" data-target="#modalLogin" class="btn">Đăng nhập</button>
                    <button onclick="registerNow()" type="button" style="color:white;background-color:#ee4d2d" data-toggle="modal" data-target="#modalRegister" class="btn">Đăng ký</button>
                </div>
            }
        </div>
    </div>
</div>